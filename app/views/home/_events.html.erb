<section>
  <h2>Events</h2>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Event date</th>
        <th>Description</th>
        <th>Address</th>
        <th>Favourites</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.name %></td>
          <td><%= event.event_date %></td>
          <td><%= event.description %></td>
          <td><%= event.address_id %></td>
          <td><%= event.favourites %></td>
          <td><%= link_to 'Show', event %></td>
          <td><%= link_to 'Edit', edit_event_path(event) %></td>
          <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>