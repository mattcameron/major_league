<div class="container admin-wrapper">
  <div class="pull-right">
    <%= link_to 'New Event', new_admin_event_path, class: 'btn btn-primary' %>
  </div>
  <h1>Events</h1>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Event date</th>
        <th>Host</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.name %></td>
          <td><%= event.event_date.try(:strftime, '%d %B, %Y') %></td>
          <td><%= event.host.try(:name) %></td>
          <td><%= link_to 'Show', event_path(event) %></td>
          <td><%= link_to 'Edit', edit_admin_event_path(event) %></td>
          <td><%= link_to 'Destroy', admin_event_path(event), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>