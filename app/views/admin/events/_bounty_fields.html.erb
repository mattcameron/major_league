<div class="nested-fields bounty form-inline">
  <%= f.hidden_field :event_id %>

  <div class="form-group">
    <%= f.label :value, 'Points' %>
    <%= f.number_field :value, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :name, 'Description' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :user_id %>
    <%= f.collection_select :user_id, User.all, :id, :name, { prompt: '-' }, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= link_to_remove_association f, class: 'btn btn-danger' do %>
      <span class="glyphicon glyphicon-remove"></span>
    <% end %>
  </div>
</div>