<div class="nested-fields bounty">
  <%= f.hidden_field :event_id %>

  <div class="form-group">
    <%= f.label :value, 'Points' %>
    <%= f.number_field :value, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :name, 'Description' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :user_id %>
    <%= f.collection_select :user_id, User.all, :id, :name, { include_blank: true }, class: 'form-control' %>
  </div>

  <%= link_to_remove_association "Delete Bounty", f, class: 'pull-right btn btn-default' %>
  <div class="clearfix"></div>
</div>