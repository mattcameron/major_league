<%= form_for(league) do |f| %>
  <% if league.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(league.errors.count, "error") %> prohibited this league from being saved:</h2>

      <ul>
      <% league.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <h2>Users</h2>
  <div class="users">
    <%= f.fields_for :users, f.object.users do |ff| %>
      <%= render 'user_fields', f: ff %>
    <% end %>

    <div class="links">
      <%= link_to_add_association 'Add User', f, :users %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
