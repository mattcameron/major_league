<%= form_for(event) do |f| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :event_date %>
    <%= f.datetime_select :event_date %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :address_id %>
    <%= f.number_field :address_id %>
  </div>

  <div class="field">
    <%= f.label :favourites %>
    <%= f.text_area :favourites %>
  </div>

  <div class="field">
    <%= f.label :bounties %>
    <%= f.fields_for :bounties do |ff| %>
      <%= render 'bounty_fields', f: ff %>
    <% end %>
    <div class="links">
      <%= link_to_add_association 'Add new bounty', f, :bounties %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
