<%= form_for event, html: { id: 'event-form' } do |f| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= f.label :event_date %>
    <%= f.datetime_select :event_date, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control', required: true %>
  </div>

  <div class="form-group row">
    <%= f.label :image, class: 'col-sm-12' %>
    <% if f.object.image.present? %>
      <div class="col-sm-3">
        <%= image_tag f.object.image.url, class: 'img-responsive' %>
      </div>
    <% end %>
    <div class="col-sm-9">
      <%= f.file_field :image, class: 'form-control' %>
      <div class="help-block">Max file size 5MB</div>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :cover_image, class: 'col-sm-12' %>
    <% if f.object.cover_image.present? %>
      <div class="col-sm-3">
        <%= image_tag f.object.cover_image.url, class: 'img-responsive' %>
      </div>
    <% end %>
    <div class="col-sm-9">
      <%= f.file_field :cover_image, class: 'form-control' %>
      <div class="help-block">Recommended size 1520x250</div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :address %>
    <%= f.text_field :address, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :favourites %>
    <%= f.text_area :favourites, class: 'form-control' %>
  </div>

  <div class="actions text-center">
    <%= f.submit %>
  </div>
<% end %>
