<div class="nested-fields">
  <%= f.hidden_field :event_id %>

  <div class="field">
    <%= f.label :value %>
    <%= f.number_field :value %>
  </div>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :user_id %>
    <%= f.collection_select :user_id, User.all, :id, :name, include_blank: true %>
  </div>

  <%= link_to_remove_association "Delete Bounty", f %>
</div>